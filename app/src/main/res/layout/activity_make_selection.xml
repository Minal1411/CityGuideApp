<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".MakeSelection">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make selection"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:fontFamily="@font/muli_extralight"
            android:layout_marginTop="30dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="@string/make_selection_detail"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/muli_extralight"
            />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:layout_marginTop="50dp"
           android:background="@color/lightWhite"
           android:padding="10dp">
           <ImageView
               android:layout_width="80dp"
               android:id="@+id/mobile_icon"
               android:layout_height="80dp"
               android:src="@drawable/mobile_custom_icon"
               android:layout_centerVertical="true"
               android:layout_marginRight="20dp"/>
           <TextView
               android:id="@+id/mobile_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="via sms"
               android:textColor="@color/black"
               android:textSize="25sp"
               android:layout_marginTop="35dp"
              android:layout_toRightOf="@id/mobile_icon"
               android:fontFamily="@font/muli_extralight"
               />
           <TextView
               android:id="@+id/mobile_des"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="+9779843441934"
               android:textColor="@color/black"
               android:textSize="25sp"
               android:layout_marginTop="35dp"
               android:layout_below="@id/mobile_title"
               android:layout_toRightOf="@id/mobile_icon"
               android:fontFamily="@font/muli_extralight"
               />
           <Button
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#00000000"/>

       </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:background="@color/lightWhite"
            android:padding="10dp">
            <ImageView
                android:layout_width="80dp"
                android:id="@+id/email_icon"
                android:layout_height="80dp"
                android:src="@drawable/email"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="via mail:"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@id/email_icon"
                android:fontFamily="@font/muli_extralight"
                />
            <TextView
                android:id="@+id/email_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="k.minal93@gmail.com"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="35dp"
                android:layout_below="@id/email_title"
                android:layout_toRightOf="@id/email_icon"
                android:fontFamily="@font/muli_extralight"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"/>

        </RelativeLayout>



    </LinearLayout>

</ScrollView>